{% extends '::base.html.twig' %}
{% block body %}

<div class="form-body">
        
        {{ form_start(form) }}
	<div class="form-body">
            <h4>Manuale</h4>
            {% if form.documento_file.file is defined %}
                {{ form_row(form.documento_file) }}
            {% else %}
                <div style="margin-top: 3em; padding: 0px 1.5em;">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 61%;">Nome Documento</th>
                            <th style="width: 10%;">Data</th>
                            <th style="width: 14%;">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if form.vars.read_only %}
                            {{ mostra_file_dettaglio_utente_tr(form.vars.value.documentofile) }}
                        {% else %}
                            {{ mostra_file_dettaglio_utente_tr(form.vars.value.documentofile, path('elimina_documento_manuale', {'id_manuale': manuale.id })) }}
                        {% endif %}
                    </tbody>
                </table>
                </div>
                <br>
                {{ form_row(form.documento_file) }}
            {% endif %}
            {{ form_row(form.descrizione) }}
	{{ form_end(form) }}
	</div>
</div>

{% endblock %} 