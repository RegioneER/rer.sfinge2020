<h4>
    Percettori
</h4>

{% if pagamenti_percettori|length > 0 %}

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Codice pagamento</th>
            <th>Tipologia pagamento</th>
            <th>Data pagamento</th>
            <th>Codice fiscale</th>
            <th>Soggetto pubblico</th>
            <th>Tipo percettore</th>
            <th>Importo</th>
        </tr>
    </thead>
    <tbody>
        {% for risultato in pagamenti_percettori %}
            <tr>
                <td>{{ risultato.pagamento.id }}</td>
                <td>{{ risultato.pagamento.tipologiapagamento }}</td>
                <td>{{ risultato.pagamento.datapagamento|date('d/m/Y') }}</td>
                <td>{{ risultato.soggetto.codicefiscale }}</td>
                <td>{{ risultato.soggetto.formagiuridica.soggettopubblico ? 'S' : 'N' }}</td>
                <td>{{ risultato.tipopercettore }}</td>
                <td>{{ risultato.importo|number_format(2, ',', '.') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% else %}
    <h5>Nessun elemento trovato</h5></br>
{% endif %}