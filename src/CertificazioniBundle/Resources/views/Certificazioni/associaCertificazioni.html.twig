{% extends '::base.html.twig' %}

{% block body %}

	{{ form_start(form) }}
	<table class="table table-striped table-hover table-bordered" id="certificazioni-elenco">
        <thead>
            <tr>
                <th>Numero certificazione</th>
				<th>Anno contabile</th>				
				<th>Seleziona</th>
            </tr>
        </thead>
		<tbody>
			{% for certificazione in form.certificazioni.children %}
				<tr>
					<td>{{ certificazioni_associativo[certificazione.vars.value].numero }}</td>
					<td>{{ certificazioni_associativo[certificazione.vars.value].anno }}</td>
					<td>{{ form_widget(certificazione) }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{ form_end(form) }}

{% endblock %}
