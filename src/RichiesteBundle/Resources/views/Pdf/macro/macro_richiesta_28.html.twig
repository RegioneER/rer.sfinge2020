{% macro checkVariabile(value) %}
{{value ? 'X' : ''}}
{% endmacro %}

{% macro tabellaCheckBox(label, value) %}
    {% import _self as self %}
    <table class="singolo-checkbox">
        <tbody>
            <tr>
                <td>
                    {{ label }}
                </td>
                <td>
                    {{ self.checkVariabile(value) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endmacro %}

{% macro tabellaValue(label, value) %}
    <table>
        <tbody>
            <tr>
                <td >{{ label }}</td>
                <td  style="text-align:center; vertical-align: middle;">
                        {{value}}
                </td>
            </tr>
        </tbody>
    </table>


{% endmacro %}

{% macro sezionePianoCosto(titolo, sezione) %}
    <div>
    <h4>{{titolo}}</h4>
    <table>
        <thead>
            <tr>
                <th>Voce</th>
                <th>Azione 1</th>
                <th>Azione 2</th>
                <th>Azione 3</th>
                <th>Azione 4</th>
            </tr>
        </thead>
        <tbody>
            {% for label_voce, voce in sezione %}
                <tr>
                    <td>{{label_voce}}</td>
                    {% for elemento in voce %}
                        <td>{{elemento| number_format(2,',','.')}}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
{% endmacro %}