{% extends '::base.html.twig' %}

{% block body %}
    <a href="{{ path('crea_partita_elenco_procedure') }}">Torna</a>
    <br/>
    <br/>

    <h1>{{ procedura.titolo }} (ID {{ procedura.id }})</h1>
    <h2>
        Numero richieste di contributo ammesse senza partite: {{ istruttorie_ammesse_senza_partite|length }}
        (di cui selezionabili: {{ nr_istruttorie_selezionabili }})
    </h2>
    <h2>Numero richieste di contributo ammesse con partite: {{ istruttorie_ammesse_con_partite|length }}</h2>
    <p class="lead">Seleziona la/e richiesta/e per cui creare la <strong>partita</strong></p>
    <form name="elenco_richieste" action="{{ path('crea_partita') }}" method="POST">
        <input type="hidden" id="procedura_id" name="procedura_id" value="{{ procedura.id }}">
        <div class="table-toolbar">
            <div>
                <input id="checkAll" type="button" class="btn btn-primary" style="width:150px" value="Seleziona tutti"/>
            </div>
        </div>

        <div class="pull-right">
            <div>
                <button type="submit" id="submit" name="submit-dev" class="btn btn-primary active">Procedi DEV</button>
                <button type="submit" id="submit" name="submit-prod" class="btn btn-primary active">Procedi PROD</button>
            </div>
        </div>

        <br/><br/>
        <br/><br/>

        <table class="table table-striped table-hover table-bordered" id="richieste-elenco">
            <caption>Richieste senza partite</caption>
            <thead>
                <tr>
                    <th>Progressivo</th>
                    <th>Seleziona</th>
                    <th>Id. richiesta</th>
                    <th>Beneficiario</th>
                    <th>Lifnr</th>
                    <th>Data atto di concessione</th>
                    <th>Determina di concessione</th>
                    <th>Numero impegno</th>
                    <th>Posizione impegno</th>
                    <th>Importo lordo</th>
                    <th>Centro di costo</th>
                    <th>Attuazione e controllo</th>
                </tr>
            </thead>
            <tbody>
                {% set progressivo = 1 %}
                {% for istruttoria_ammessa in istruttorie_ammesse_senza_partite %}
                    <tr>
                        <td>{{ progressivo }}</td>
                        <td style="text-align: center;">
                            {% if istruttoria_ammessa.selezionabile %}
                                <div class="checkbox-list">
                                    <input class="checkbox" type="checkbox" id="checkbox_{{ istruttoria_ammessa.richiesta.id }}" name="check[]" value="{{ istruttoria_ammessa.richiesta.id }}">
                                    <label for="checkbox_{{ istruttoria_ammessa.richiesta.id }}" style="display:none">Richiesta {{ istruttoria_ammessa.richiesta.id }}</label>
                                </div>
                            {% else %}
                                Controllare le colonne successive per vedere i dati mancanti
                            {% endif %}
                        </td>
                        <td style="text-align: center;">{{ istruttoria_ammessa.richiesta.id }}</td>
                        <td>{{ istruttoria_ammessa.richiesta.mandatario.soggetto.denominazione }}</td>
                        <td>{{ istruttoria_ammessa.richiesta.mandatario.soggetto.lifnrSap }}</td>

                        {% if istruttoria_ammessa.richiesta.istruttoria.attoConcessioneAtc %}
                            <td>{{ istruttoria_ammessa.richiesta.istruttoria.attoConcessioneAtc.dataPubblicazione|date("d/m/Y") }}</td>
                            <td>{{ istruttoria_ammessa.richiesta.istruttoria.attoConcessioneAtc.numero }}</td>
                        {% else %}
                            <td></td>
                            <td></td>
                        {% endif %}

                        <td>{{ istruttoria_ammessa.richiesta.istruttoria.numeroImpegno }}</td>
                        <td>{{ istruttoria_ammessa.richiesta.istruttoria.posizioneImpegno }}</td>
                        <td>{{ istruttoria_ammessa.richiesta.istruttoria.contributoAmmesso|number_format(2, ',', '.') }}€</td>
                        <td>{{ istruttoria_ammessa.procedura.centroDiCosto }}</td>
                        <td>
                            {% if istruttoria_ammessa.richiesta.attuazioneControllo %}
                                Sì
                            {% else %}
                                No
                            {% endif %}
                        </td>
                    </tr>
                    {% set progressivo = progressivo + 1 %}
                {% endfor %}
            </tbody>
        </table>

        <br/><br/>

        <div class="pull-right">
            <div>
                <button type="submit" id="submit" name="submit-dev" class="btn btn-primary active">Procedi DEV</button>
                <button type="submit" id="submit" name="submit-prod" class="btn btn-primary active">Procedi PROD</button>
            </div>
        </div>
    </form>

    <br/><br/>
    <br/><br/>

    <table class="table table-striped table-hover table-bordered" id="richieste-elenco">
        <caption>Richieste con partite</caption>
        <thead>
        <tr>
            <th>Progressivo</th>
            <th>Id. richiesta</th>
            <th>Beneficiario</th>
            <th>Lifnr</th>
            <th>Data atto di concessione</th>
            <th>Determina di concessione</th>
            <th>Numero impegno</th>
            <th>Posizione impegno</th>
            <th>Importo lordo</th>
            <th>Centro di costo</th>
            <th>Nr. partita</th>
        </tr>
        </thead>
        <tbody>
        {% set progressivo = 1 %}
        {% for istruttoria_ammessa in istruttorie_ammesse_con_partite %}
            <tr>
                <td>{{ progressivo }}</td>
                <td style="text-align: center;">{{ istruttoria_ammessa.richiesta.id }}</td>
                <td>{{ istruttoria_ammessa.richiesta.mandatario.soggetto.denominazione }}</td>
                <td>{{ istruttoria_ammessa.richiesta.mandatario.soggetto.lifnrSap }}</td>
                <td>{{ istruttoria_ammessa.richiesta.istruttoria.attoConcessioneAtc.dataPubblicazione|date("d/m/Y") }}</td>
                <td>{{ istruttoria_ammessa.richiesta.istruttoria.attoConcessioneAtc.numero }}</td>
                <td>{{ istruttoria_ammessa.richiesta.istruttoria.numeroImpegno }}</td>
                <td>{{ istruttoria_ammessa.richiesta.istruttoria.posizioneImpegno }}</td>
                <td>{{ istruttoria_ammessa.richiesta.istruttoria.contributoAmmesso|number_format(2, ',', '.') }}€</td>
                <td>{{ istruttoria_ammessa.procedura.centroDiCosto }}</td>
                <td>
                    {% for partita in istruttoria_ammessa.richiesta.attuazioneControllo.partite %}
                        {{ partita.numeroPartita }}
                        {%- if not loop.last -%}
                            ,
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            {% set progressivo = progressivo + 1 %}
        {% endfor %}
        </tbody>
    </table>

    <br/>
    <br/>
    <a href="{{ path('crea_partita_elenco_procedure') }}">Torna</a>
{% endblock %}

{% block  page_level_scripts %}
    <script>
        $("#checkAll").attr("data-type", "check");
        $("#checkAll").click(function() {
            if ($("#checkAll").attr("data-type") === "check") {

                $(".checkbox").each(function(){

                    $(this).prop("checked", true);

                    if ($(this).is(':disabled')) {
                        $(this).prop("checked", false);
                    }
                })

                $("#checkAll").attr("value", "Deseleziona tutti");
                $("#checkAll").attr("data-type", "uncheck");
            } else {
                $(".checkbox").prop("checked", false);
                $("#checkAll").attr("value", "Seleziona tutti");
                $("#checkAll").attr("data-type", "check");
            }
        })
    </script>
{% endblock %}