{% extends '::base.html.twig' %}

{% block body %}
    <p class="lead">SAP test suite - Crea soggetti bando</p>

    {{ form_start(form) }}

    {{ form_end(form) }}

    <a href="{{ path('sap_test_suite') }}" type="button">Torna alla suite</a>

    <br />
    <br />

    {% set counter = 1 %}
    {% if success is not empty %}
        <h5>Importi creati</h5>
        <table class="table table-striped table-hover table-bordered" id="proponenti-elenco">
            <thead>
                <tr>
                    <th>Incrementale</th>
                    <th>Soggetto</th>
                    <th>Importo</th>
                    <th>Percentuale</th>
                </tr>
            </thead>
            <tbody>
                {% for item in success %}
                    <tr>
                        <td>{{ counter }}</td>
                        <td>{{ item.soggetto }}</td>
                        <td>{{ item.importo }}</td>
                        <td>{{ item.percentuale }}</td>
                    </tr>
                    {% set counter = counter + 1 %}
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <br />
    <br />

    {% set counter = 1 %}
    {% if successGiaPresente is not empty %}
        <h5>Importi gi√† presenti</h5>
        <table class="table table-striped table-hover table-bordered" id="proponenti-elenco">
            <thead>
            <tr>
                <th>Incrementale</th>
                <th>Soggetto</th>
                <th>Importo</th>
                <th>Percentuale</th>
            </tr>
            </thead>
            <tbody>
            {% for item in successGiaPresente %}
                <tr>
                    <td>{{ counter }}</td>
                    <td>{{ item.soggetto }}</td>
                    <td>{{ item.importo }}</td>
                    <td>{{ item.percentuale }}</td>
                </tr>
                {% set counter = counter + 1 %}
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    

    {% set counter = 1 %}
    {% if error is not empty %}
        <h5>Importi <strong>non</strong> creati</h5>
        <table class="table table-striped table-hover table-bordered" id="proponenti-elenco">
            <thead>
            <tr>
                <th>Incrementale</th>
                <th>Soggetto</th>
                <th>Codice fiscale</th>
                <th>Errori</th>
            </tr>
            </thead>
            <tbody>
                {% for item in error %}
                    <tr>
                        <td>{{ counter }}</td>
                        <td>{{ item.soggetto.ragione_sociale }}</td>
                        <td>{{ item.soggetto.codice_fiscale }}</td>
                        <td>{{ item.errori|join('|') }}</td>
                    </tr>
                    {% set counter = counter + 1 %}
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}