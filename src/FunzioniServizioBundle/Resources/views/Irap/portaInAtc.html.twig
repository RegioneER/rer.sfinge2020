{% extends '::base.html.twig' %}

{% block body %}
    <a href="{{ path('funzionalita_irap') }}">Torna</a>
    <br/>
    <br/>
    
    <p class="lead">Porta richieste in ATC</p>
    
    {{ form_start(form) }}

    {{ form_row(form.bando) }}
    {{ form_row(form.atto) }}
    {{ form_row(form.validatore) }}

    {{ form_end(form) }}

    {% if counter is not null %}
        <br/>
        <br/>
        <div class="alert alert-success">
            Richieste portate in ATC: {{ counter }}
        </div>
    {% endif %}
    
    {% set procedura_id_bando_irap = 118 %}
    {% if richieste[procedura_id_bando_irap] is not empty %}
        {% set progressivo = 1 %}
        <h4>Elenco richieste da portare in ATC ({{ richieste[procedura_id_bando_irap]|length }})</h4>
        <table class="table table-striped table-hover table-bordered" id="richieste-elenco">
            <thead>
                <tr>
                    <th colspan="3">Bando IRAP</th>
                <tr>
                <tr>
                    <th>Progressivo</th>
                    <th>Protocollo</th>
                    <th>Cor</th>
                </tr>
            </thead>
            <tbody>
                {% for richiesta in richieste[procedura_id_bando_irap] %}
                    <tr>
                        <td>{{ progressivo }}</td>
                        <td>{{ richiesta.protocollo }}</td>
                        <td>{{ richiesta.cor }}</td>
                    </tr>
                    {% set progressivo = progressivo + 1 %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <br/>
        <div class="alert alert-success">
            Nessuna richiesta da portate in ATC per il Bando IRAP
        </div>
    {% endif %}

    {% set procedura_id_bando_irap = 125 %}
    {% if richieste[procedura_id_bando_irap] is not empty %}
        {% set progressivo = 1 %}
        <h4>Elenco richieste da portare in ATC ({{ richieste[procedura_id_bando_irap]|length }})</h4>
        <table class="table table-striped table-hover table-bordered" id="richieste-elenco">
            <thead>
            <tr>
                <th colspan="3">Secondo bando IRAP</th>
            <tr>
            <tr>
                <th>Progressivo</th>
                <th>Protocollo</th>
                <th>Cor</th>
            </tr>
            </thead>
            <tbody>
            {% for richiesta in richieste[procedura_id_bando_irap] %}
                <tr>
                    <td>{{ progressivo }}</td>
                    <td>{{ richiesta.protocollo }}</td>
                    <td>{{ richiesta.cor }}</td>
                </tr>
                {% set progressivo = progressivo + 1 %}
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <br/>
        <div class="alert alert-success">
            Nessuna richiesta da portate in ATC per il Secondo bando IRAP
        </div>
    {% endif %}

    <br/>
    <br/>
    <a href="{{ path('funzionalita_irap') }}">Torna</a>
{% endblock %}