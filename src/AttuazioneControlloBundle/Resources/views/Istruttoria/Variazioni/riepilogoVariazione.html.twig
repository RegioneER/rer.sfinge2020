{% extends 'AttuazioneControlloBundle:Istruttoria/Variazioni:baseIstruttoria.html.twig' %}
	
{% block content %}
<br>
<h6>Dati variazione</h6>
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped table-hover table-bordered">	
			<tr>
				<td style="width: 30%;">Data invio</td><td>{{ variazione.dataInvio is null ? '-' : variazione.dataInvio|date('d/m/Y H:i:s') }}</td>
			</tr>
			<tr>
				<td>Numero protocollo</td><td>{{ variazione.protocollo }}</td>
			</tr>
			<tr>
				<td>Oggetto e motivazioni della variazione</td><td>{{ variazione.note }}</td>
			</tr>		
		</table>
	</div>
</div>
				
{% set richiesta = variazione.richiesta %}
<br>
<h6>Dati operazione</h6>
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped table-hover table-bordered">
			<tr>
				<td style="width: 30%;">Numero operazione</td><td>{{ richiesta.id }}</td>
			</tr>
			<tr>
				<td>Numero protocollo</td><td>{{ richiesta.protocollo }}</td>
			</tr>
			<tr>
				<td>Titolo operazione</td><td>{{ richiesta.titolo is not null ? richiesta.titolo : "-" }}</td>
			</tr>
			<tr>
				<td>Stato</td><td>{{ richiesta.stato.descrizione }}</td>
			</tr>
			<tr>
				<td>Soggetto mandatario</td><td>{{ richiesta.mandatario.soggetto }}</td>
			</tr>
			<tr>
				<td>Proponenti</td><td>{{ richiesta.proponenti|length == 1 ? "Singolo soggetto" : "Rete di soggetti" }}</td>
			</tr>				
		</table>
	</div>
</div>

{% endblock content %}