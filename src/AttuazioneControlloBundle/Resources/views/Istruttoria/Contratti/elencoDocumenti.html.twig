{% extends '::base_ente.html.twig' %}

{% block body %}		
    <h4>Elenco documenti caricati</h4>
    {% if documenti_caricati is not empty %}
        <div class="form-body">	
            {% for documento in documenti_caricati %}
                {{ mostra_file_istruttoria(documento, path('documento_contratto_istruttoria', {'id_documento_contratto': documento.id,'id_pagamento': pagamento.id, '_token': csrfToken, mostra_elimina: false}) )}}
                <br/>
            {% endfor %}
        </div>
    {% else %}
        <h6>Nessun documento caricato</h6>
    {% endif %}
    {% if istruttoria is defined %}
        <br/>
        <h4>Istruttoria</h4>
        {{ form_start(form_istruttoria) }}
        {{ form_end(form_istruttoria) }}
    {% else %}
        <div class="page-actions">
            {{ pulsante_indietro(path("elenco_contratti",{"id_pagamento":pagamento.id})) }}
        </div>
    {% endif %}
{% endblock %}
