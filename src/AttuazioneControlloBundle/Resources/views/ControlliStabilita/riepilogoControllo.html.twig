{% extends '::base.html.twig' %}

{% block body %}
	
{% include 'AttuazioneControlloBundle:ControlliStabilita:menu_principale.html.twig' %}		
{% include 'AttuazioneControlloBundle:ControlliStabilita:menu.html.twig' with {'controllo' : controllo } %}	
<br>
				
{% set richiesta = controllo.richiesta %}
<br>
<h4>Dati</h4>
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped table-hover table-bordered">
			<tr>
				<td style="width: 30%;">Numero operazione</td><td>{{ richiesta.id }}</td>
			</tr>
			<tr>
				<td>Numero protocollo</td><td>{{ richiesta.protocollo }}</td>
			</tr>
			<tr>
				<td>Titolo operazione</td><td>{{ richiesta.titolo is not null ? richiesta.titolo : "-" }}</td>
			</tr>
			<tr>
				<td>Stato</td><td>{{ richiesta.stato.descrizione }}</td>
			</tr>
			<tr>
				<td>Soggetto mandatario</td><td>{{ richiesta.mandatario.soggettoVersion }}</td>
			</tr>
			<tr>
				<td>Proponenti</td><td>{{ richiesta.proponenti|length == 1 ? "Singolo soggetto" : "Rete di soggetti" }}</td>
			</tr>				
		</table>
	</div>
</div>

<h4>Dati controllo</h4>

{{ form(form) }}
				
{% endblock %}