{% extends '::base_ente.html.twig' %}

{% block body %}
{% include 'AttuazioneControlloBundle:PA/Richieste:menu.html.twig' with {'attuazione_controllo' : attuazione_controllo }%}	
	<h4>Riepilogo proroga</h4>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-hover table-bordered">
				<tr>
					<td>Numero proroga</td>
					<td>{{ proroga.id }}</td>
				</tr>
				<tr>
					<td>Numero protocollo</td>
					<td>{{ proroga.protocollo }}</td>
				</tr>
				<tr>
					<td>Soggetto mandatario</td>
					<td>{{ attuazione_controllo.richiesta.mandatario.soggetto }}</td>
				</tr>
				<tr>
					<td>Tipo proroga</td>
					{% if proroga.tipoproroga is null  %}
						<td>-</td>
					{% elseif proroga.tipoproroga == 'PROROGA_AVVIO' %}
						<td>Proroga avvio progetto</td>
					{% elseif proroga.tipoproroga == 'PROROGA_FINE' %}
						<td>Proroga termine progetto</td>
					{% else %}
						<td>-</td>
					{% endif %}
				</tr>
				<tr>
					{% if proroga.dataavvioapprovata is not null  %}
						<td>Data avvio progetto prorogata</td>
						<td>{{ proroga.dataavvioapprovata|date('d-m-Y') }}</td>
					{% elseif proroga.datafineapprovata is not null %}
						<td>Data termine progetto prorogata</td>
						<td>{{ proroga.datafineapprovata|date('d-m-Y') }}</td>
					{% else %}
						<td>-</td>
						<td>-</td>
					{% endif %}
				</tr>
				<tr>
					<td>Motivazione</td>
					<td>{{ proroga.motivazioni }}</td>
				</tr>	
			</table>
		</div>
	</div>
					
	<a class="btn btn-primary" href="{{ path('riepilogo_proroghe_atc', { 'id_richiesta': attuazione_controllo.richiesta.id }) }}">Indietro</a>
{% endblock %}
