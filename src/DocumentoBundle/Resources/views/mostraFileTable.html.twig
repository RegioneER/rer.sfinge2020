<div class="row">
	<table class="table table-striped table-hover table-bordered">
		<thead>
			<tr>
				<th style="width: 40%">Nome file</th>
				<th style="width: 40%">Tipo file</th>
				<th style="width: 20%">Azioni</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{% if firmato %} {{ nomeFirmato }} {% else %} {{ nome }} {% endif %}</td>
				<td>{{ documento.tipologiaDocumento.descrizione }}</td>
				<td>
				{% if firmato %}
					<a class="btn btn-sm btn-primary" title="Scarica documento firmato" href="{{ path("scarica", {"path_codificato":path}) }}" target="_blank">Scarica <small class="italic">(p7m)</small></a>
					<a class="btn btn-sm btn-info" title="Scarica documento" href="{{ path("scarica_originale", {"path_codificato":path}) }}" target="_blank">Scarica Originale</a>
					{% if pathElimina is not null %}
						<a class="btn btn-sm btn-danger" title="Elimina Documento" href="{{ pathElimina }}" data-confirm="Eliminare il documento selezionato?">Elimina</a>
					{% endif %}
				{% else %}
					{% if pathElimina is not null %}
						<a class="btn btn-sm btn-primary" href="{{ path("scarica", {"path_codificato":path}) }}" target="_blank">Scarica</a>
						<a class="btn btn-sm btn-danger" title="Elimina Documento" href="{{ pathElimina }}" data-confirm="Eliminare il documento selezionato?">Elimina</a>
					{% else %}
						<a class="btn btn-sm btn-primary" href="{{ path("scarica", {"path_codificato":path}) }}" target="_blank">Scarica</a>
					{% endif %}
				{% endif %}
				</td>
			</tr>
		</tbody>
	</table>
</div>