{% extends '::base.html.twig' %}

{% block body %}
    <div class="table-toolbar">
        <div class="btn-group">
            <a href="{{ path('crea_fascicolo') }}"><button id="sample_editable_1_new" class="btn green"><span class="fa fa-plus"></span></button>
            </a>
        </div>
    </div>
	{% if fascicoli|length > 0 %}
    <table class="table table-striped table-hover table-bordered" id="notizie-elenco">
        <thead>
            <tr>
                <th>Titolo Indice Pagina</th>
				<th>Alias Indice Pagina</th>
				<th>Azioni</th>
            </tr>
        </thead>
        <tbody>
			{% for fascicolo in fascicoli %}
				<tr>
					<td>{{ fascicolo.indice.titolo }}</td>
					<td>{{ fascicolo.indice.alias }}</td>
					<td><div class="dropdown">
							<button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuFascicoli" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								Azioni
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenuFascicoli">
								<li><a href="{{ path('modifica_fascicolo', {'id_fascicolo':fascicolo.id}) }}">Modifica</a></li>
								<li><a href="{{ path('genera_albero_fascicolo', {'id_fascicolo':fascicolo.id}) }}">Visualizza</a></li>
								<li><a href="{{ path('elimina_fascicolo', {'id_fascicolo':fascicolo.id, '_token': csrfToken }) }}">Elimina</a></li>
								<li><a href="{{ path('clona_fascicolo', {'id_fascicolo':fascicolo.id}) }}">Clona</a></li>
								<li><a href="{{ path('esporta_fascicolo', {'id_fascicolo':fascicolo.id}) }}">Esporta in SQL</a></li>								
								<li><a href="{{ path('crea_istanza_fascicolo', {'id_fascicolo':fascicolo.id}) }}">Crea Istanza</a></li>
							</ul>
						</div>
					</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>
	{% endif %}
{% endblock %}
